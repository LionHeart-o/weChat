<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/chat_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.wechat.customView.RefreshableView
                android:id="@+id/refreshable_view"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/hideout_linear"
                        android:layout_width="match_parent"
                        android:layout_height="700dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/title_bar"
                            android:layout_width="match_parent"
                            android:background="@drawable/sun"
                            android:layout_height="300dp"
                            >
                            <ImageView
                                android:id="@+id/bg"
                                android:layout_alignParentRight="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </ImageView>
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true"
                                android:textColor="@android:color/white"
                                android:text="犯罪窝点"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"
                                />
                            <ImageView
                                android:id="@+id/send_dynamics"
                                android:layout_alignParentRight="true"
                                android:background="@mipmap/write"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="8dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp">
                            </ImageView>
                        </RelativeLayout>
                        <com.example.wechat.customView.ContactListView
                                android:id="@+id/thought_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#EEEEEE"
                                android:dividerHeight="8dp"
                                android:scrollbars="none" />
                    </LinearLayout>
                </ScrollView>
            </com.example.wechat.customView.RefreshableView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

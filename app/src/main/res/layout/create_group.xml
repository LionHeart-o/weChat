<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_below="@+id/arrow_icon"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/create_group_window_style"
        android:orientation="vertical"
        android:paddingBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_color_white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/app_color_white"
                >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/create_group_head"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:src="@mipmap/default_group"
                    android:layout_margin="10dp"
                    android:layout_height="100dp">
                </ImageView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/create_group_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text_gray"
                    android:text="选一张图片作为你的群头像吧！"
                    android:textSize="14dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_selector"
                android:padding="10dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="群名"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY" />
                <EditText
                    android:hint="为你的群取一个名字吧~"
                    android:background="@color/app_color_white"
                    android:textColorHint="@color/text_gray"
                    android:id="@+id/edit_group_name"
                    android:textColor="@color/app_color_black"
                    android:layout_marginLeft="75dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_selector"
                android:padding="10dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="群描述"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY" />
                <EditText
                    android:maxLines="2"
                    android:hint="说说群的主题吧~"
                    android:background="@color/app_color_white"
                    android:textColorHint="@color/text_gray"
                    android:id="@+id/edit_group_signature"
                    android:textColor="@color/app_color_black"
                    android:layout_marginLeft="75dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </EditText>
            </RelativeLayout>

            <Button
                android:layout_margin="10dp"
                android:id="@+id/sure"
                android:layout_alignParentBottom="true"
                android:text="确定"
                android:textColor="@color/app_color_white"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:background="@drawable/button_publish_selector"
                android:layout_height="40dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

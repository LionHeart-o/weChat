<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="20dp"
        android:src="@mipmap/top_arrow"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="150dp"
        android:layout_height="20dp">
    </ImageView>
    <LinearLayout
        android:layout_below="@+id/arrow_icon"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_window_style"
        android:orientation="vertical"
        android:paddingBottom="2dp">
        <LinearLayout
            android:id="@+id/add_friend_or_group"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@mipmap/friend_add_fill"
                android:layout_height="30dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/app_color_white"
                android:text="添加好友/群"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/generate_group"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@mipmap/group"
                android:layout_height="30dp">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/app_color_white"
                android:text="创建群聊"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

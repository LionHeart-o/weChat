<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/danna"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/liner1"
        android:orientation="vertical"
        android:background="@drawable/circle_rectangle"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="#999999"
            android:text="忘记密码">
        </TextView>

        <TextView
            android:textColor="#999999"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal"
            android:text="邮箱">
        </TextView>
        <EditText
            android:id="@+id/forget_password_email"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_rectangle"
            android:paddingLeft="10dp"
            android:textColor="#999999"
            android:textSize="10dp"></EditText>

        <TextView
            android:textColor="#999999"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="验证码">
        </TextView>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="45dp">
            <EditText
                android:id="@+id/verification_code"
                android:layout_marginTop="5dp"
                android:textColor="#999999"
                android:textSize="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/input_rectangle"
                android:layout_width="160dp"
                android:layout_height="35dp">
            </EditText>
            <Button
                android:id="@+id/forget_password_get_verification_code"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="35dp">
            </Button>
        </LinearLayout>
        <Button
            android:id="@+id/modify_password"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_rectangle"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="修改密码"
            android:layout_width="250dp"
            android:layout_height="40dp">
        </Button>

    </LinearLayout>

</RelativeLayout>
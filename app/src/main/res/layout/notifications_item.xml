<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/item_bg_selector"
    android:padding="10dp">
    <ImageView
        android:src="@drawable/user"
        android:id="@+id/contact_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY" />
    <LinearLayout
        android:id="@+id/contact_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/contact_head"
        android:orientation="vertical">
        <TextView
            android:text="包英琪"
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:text="5518822@qq.com"
            android:id="@+id/contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#cfd0d1"
            android:textSize="12sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="请求添加你为好友"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <Button
        android:id="@+id/accept"
        android:layout_marginTop="30dp"
        android:background="#5bb85d"
        android:text="接受"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/refuse"
        android:layout_width="60dp"
        android:layout_height="30dp">
    </Button>
    <Button
        android:id="@+id/refuse"
        android:layout_marginTop="30dp"
        android:background="#d9544f"
        android:layout_alignParentRight="true"
        android:text="拒绝"
        android:layout_width="60dp"
        android:layout_height="30dp">
    </Button>
</RelativeLayout>

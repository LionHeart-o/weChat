<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/danna"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/liner1"
        android:orientation="vertical"
        android:background="@drawable/circle_rectangle"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="400dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="#999999"
            android:text="登录">
        </TextView>
        <TextView
            android:textColor="#999999"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal"
            android:text="邮箱">
        </TextView>
        <EditText
            android:text="1171654515@qq.com"
            android:id="@+id/login_email"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_rectangle"
            android:layout_width="250dp"
            android:layout_height="35dp">
        </EditText>
        <TextView
            android:textColor="#999999"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="密码">
        </TextView>
        <EditText
            android:text="a123456789"
            android:id="@+id/login_password"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/input_rectangle"
            android:layout_width="250dp"
            android:layout_height="35dp">
        </EditText>
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="忘记密码？"
            android:textColor="@color/colorBlue"
            >
        </TextView>
        <Button
            android:id="@+id/login_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_rectangle"
            android:layout_marginTop="20dp"
            android:text="立即登录"
            android:layout_width="250dp"
            android:layout_height="40dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/liner1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#EEEEEE"
            android:text="没有账号？">
        </TextView>
        <TextView
            android:id="@+id/jump_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:textSize="14dp"
            android:text="马上注册!">
        </TextView>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">
    <ImageView
        android:id="@+id/music_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/nanami"
        android:scaleType="fitXY" />
    <LinearLayout
        android:id="@+id/music_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/music_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#000000"
            android:ellipsize = "end"
            android:text="DETERMINATION"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/music_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#cfd0d1"
            android:text="イース・オリジン オリジナル・サウンドトラック"
            android:singleLine="true"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/music_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/music_cover"
        android:gravity="center"
        android:layout_below="@id/music_linear"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_playOrPause"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:src="@mipmap/play"></ImageView>
    </LinearLayout>
    <ImageView
        android:id="@+id/close_notification"
        android:src="@mipmap/close"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp">
    </ImageView>
</RelativeLayout>
